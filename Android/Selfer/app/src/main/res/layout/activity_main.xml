<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@drawable/bg1"
    android:icon="@drawable/ic_launcher"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uofthacks2015.selfer.selfer.MainActivity">

    <TextView android:text="User" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user"
        android:typeface="sans"
        android:textSize="36dp"
        android:textColor="#303030"
        android:paddingLeft="5dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user"
        android:layout_above="@+id/takePic"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:id="@+id/takePic"
        android:src="@drawable/cam"
        android:scaleType="centerInside"
        android:onClick="takePic"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton"
        android:onClick="goToMap"
        android:src="@drawable/pin"
        android:scaleType="centerInside"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/takePic"
        android:layout_toStartOf="@+id/takePic" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton2"
        android:onClick="logIn"
        android:layout_alignTop="@+id/takePic"
        android:layout_toRightOf="@+id/takePic"
        android:layout_toEndOf="@+id/takePic"
        android:src="@drawable/user"
        android:scaleType="fitCenter" />

</RelativeLayout>
